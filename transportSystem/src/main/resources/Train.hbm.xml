<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.transport.system.model.Train" table="train" schema="transportdatabase">
        <id name="trainId">
            <column name="train_id" sql-type="int(11)"/>
        </id>
        <property name="trainNomber">
            <column name="train_nomber" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="places">
            <column name="places" sql-type="int(11)"/>
        </property>
        <set name="schedulesByTrainId" inverse="true">
            <key>
                <column name="train_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.transport.system.model.Schedule"/>
        </set>
        <set name="ticketsByTrainId" inverse="true">
            <key>
                <column name="train_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.transport.system.model.Ticket"/>
        </set>
    </class>
</hibernate-mapping>