<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.transport.system.model.Station" table="station" schema="transportdatabase">
        <id name="stationId">
            <column name="station_id" sql-type="int(11)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <set name="schedulesByStationId" inverse="true">
            <key>
                <column name="station_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.transport.system.model.Schedule"/>
        </set>
        <set name="ticketsByStationId" inverse="true">
            <key>
                <column name="departure_station_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.transport.system.model.Ticket"/>
        </set>
        <set name="ticketsByStationId_0" inverse="true">
            <key>
                <column name="arrival_station_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.transport.system.model.Ticket"/>
        </set>
    </class>
</hibernate-mapping>