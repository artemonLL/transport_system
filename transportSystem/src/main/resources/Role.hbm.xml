<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.transport.system.model.Role" table="role" schema="transportdatabase">
        <id name="roleId">
            <column name="role_id" sql-type="int(11)"/>
        </id>
        <property name="roleName">
            <column name="role_name" sql-type="varchar(45)" length="45"/>
        </property>
        <set name="usersByRoleId" inverse="true">
            <key>
                <column name="role_id"/>
            </key>
            <one-to-many not-found="ignore" class="com.transport.system.model.User"/>
        </set>
    </class>
</hibernate-mapping>